extends master.pug

block content
  h2 Queue:
    div
      ul#msgs
        each val, index in chats
          li
            a(href=val) #{index}

  script.
    $(function () {
      let socket = io('/panel');

      socket.on('user-joined', function(room) {
        console.log('new user joined room: ', room);
        $('#msgs').append($('<li><a href="/messages/' + room + '">User chat ' + room + '</a></li>'));
      });
    });
